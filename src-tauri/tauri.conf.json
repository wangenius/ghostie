{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "ghostie",
  "version": "0.1.19",
  "identifier": "com.wangenius.ghostie",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "ghostie",
        "width": 600,
        "height": 400,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "skipTaskbar": true,
        "transparent": true,
        "label": "main",
        "center": true,
        "url": "/",
        "visible": false,
        "focus": true,
        "maximizable": false,
        "minimizable": false,
        "acceptFirstMouse": true
      },
      {
        "title": "设置",
        "minWidth": 800,
        "minHeight": 600,
        "label": "settings",
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "parent": "main",
        "center": true,
        "url": "/settings",
        "visible": false,
        "focus": true,
        "maximizable": true,
        "minimizable": true
      },
      {
        "title": "历史",
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "label": "history",
        "parent": "main",
        "center": true,
        "url": "/history",
        "visible": false,
        "focus": true,
        "maximizable": true,
        "minimizable": true
      },
      {
        "title": "知识库创建",
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "label": "knowledge-creator",
        "parent": "settings",
        "center": true,
        "url": "/knowledge-creator",
        "visible": false,
        "focus": true,
        "maximizable": true,
        "minimizable": true
      },
      {
        "title": "知识库预览",
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "label": "knowledge-preview",
        "parent": "settings",
        "center": true,
        "url": "/knowledge-preview",
        "visible": false,
        "focus": true,
        "maximizable": true,
        "minimizable": true
      },
      {
        "title": "模型编辑",
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "label": "model-edit",
        "center": true,
        "url": "/model-edit",
        "visible": false,
        "parent": "main",
        "maximizable": false,
        "minimizable": false
      },
      {
        "title": "助手编辑",
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "label": "bot-edit",
        "center": true,
        "url": "/bot-edit",
        "visible": false,
        "parent": "main",
        "maximizable": false,
        "minimizable": false
      },
      {
        "title": "代理编辑",
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "label": "agent-edit",
        "center": true,
        "url": "/agent-edit",
        "visible": false,
        "parent": "main",
        "maximizable": false,
        "minimizable": false
      },
      {
        "title": "插件编辑",
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "label": "plugin-edit",
        "center": true,
        "url": "/plugin-edit",
        "visible": false,
        "parent": "main",
        "maximizable": false,
        "minimizable": false
      },
      {
        "title": "环境变量",
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "label": "env-edit",
        "center": true,
        "url": "/env-edit",
        "visible": false,
        "parent": "main",
        "maximizable": false,
        "minimizable": false
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost",
      "capabilities": [
        "main-capability"
      ],
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      }
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": [
      "msi",
      "nsis"
    ],
    "publisher": "wangenius",
    "icon": [
      "icons/icon.ico",
      "icons/icon.png"
    ]
  },
  "plugins": {
    "updater": {
      "windows": {
        "installMode": "passive"
      },
      "active": true,
      "endpoints": [
        "https://github.com/wangenius/ghostie/releases/latest/download/latest.json"
      ],
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDlGQzZBMkM3QkMwRjU3QUMKUldTc1Z3Kzh4NkxHbjEvOURYOHBpZEV4aWxYZjZrcWR1UVkza0tWTW9MYm1TVXkzRERiQ1pEcDAK"
    }
  }
}
