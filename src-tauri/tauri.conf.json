{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "ghostie",
  "version": "0.1.55",
  "identifier": "com.wangenius.ghostie",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "ghostie",
        "width": 600,
        "height": 200,
        "resizable": true,
        "decorations": false,
        "skipTaskbar": true,
        "transparent": true,
        "label": "main",
        "center": true,
        "url": "/",
        "visible": false,
        "focus": true,
        "acceptFirstMouse": true,
        "devtools": true,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' ipc: http://ipc.localhost",
        "connect-src": "'self' https://*.supabase.co",
        "img-src": "'self' asset: http://asset.localhost",
        "style-src": "'self' 'unsafe-inline'"
      },
      "capabilities": ["main-capability"],
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "category": "Productivity",
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": ["nsis"],
    "publisher": "wangenius",
    "icon": ["icons/icon.ico", "icons/icon.png"],
    "windows": {
      "nsis": {
        "headerImage": "icons/icon.ico",
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser"
      }
    }
  },
  "plugins": {
    "updater": {
      "windows": {
        "installMode": "passive"
      },
      "createUpdaterArtifacts": true,
      "active": true,
      "endpoints": [
        "https://github.com/wangenius/ghostie/releases/latest/download/latest.json"
      ],
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDlGQzZBMkM3QkMwRjU3QUMKUldTc1Z3Kzh4NkxHbjEvOURYOHBpZEV4aWxYZjZrcWR1UVkza0tWTW9MYm1TVXkzRERiQ1pEcDAK"
    }
  }
}
